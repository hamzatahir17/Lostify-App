<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="#1565C0"
            app:statusBarScrim="#1565C0"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bagpack"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/gradient_top_shadow"
                app:layout_collapseMode="pin"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_sheet_rounded"
        android:layout_marginTop="-40dp"
        android:paddingTop="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="30dp">

            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="#E0E0E0"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#E0E0E0"
                style="@style/Widget.MaterialComponents.Chip.Entry"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvDetailTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Black Backpack"
                    android:textColor="#212121"
                    android:textSize="26sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/tvDetailStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOST"
                    android:textColor="#D32F2F"
                    android:background="@drawable/bg_status_chip_lost"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="12sp"
                    android:letterSpacing="0.05"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvDetailLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Library, 2nd Floor, Near History Section"
                    android:textColor="#505050"
                    android:textSize="15sp"
                    android:layout_marginBottom="8dp"
                    app:drawableStartCompat="@drawable/ic_location_on_small"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvDetailDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reported 2 hours ago"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    app:drawableStartCompat="@drawable/ic_access_time_small"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#212121"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I lost my black Adidas backpack containing a silver Dell laptop, two notebooks, and a blue water bottle. It has a small keychain attached to the front zipper. Please let me know if found."
                android:textColor="#424242"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginBottom="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContact"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Contact Reporter"
                android:backgroundTint="#1565C0"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                app:cornerRadius="16dp"
                app:icon="@drawable/chat"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="#FFFFFF"
                android:elevation="4dp"
                android:stateListAnimator="@null"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>